<UserControl x:Class="SkateSchool.Views.Negozio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkateSchool.Views"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Margin="10,9.062,10,10" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Quantità" DisplayMemberBinding="{Binding Quantità}"/>
                    <GridViewColumn Header="Prezzo" DisplayMemberBinding="{Binding PrezzoProdotto1.Prezzo, StringFormat={}{0:f}}"/>
                    <GridViewColumn Header="Quantità" DisplayMemberBinding="{Binding Quantita}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
