        </TabItem>
        <TabItem Header="Iscrizione corsi">
            <view:IscrizioneCorsoPage/>
        </TabItem>
        <TabItem Header="Lezione Privata">
            <view:IscrizioneLezionePrivataPage/>
        </TabItem>
        <TabItem Header="Gare e Centri Estivi">
            <view:IscrizioneGaraCentroEstivoPage/>
        </TabItem>
        <TabItem Header="Negozio">
            <view:NegozioPage/>
        </TabItem>
        <TabItem Header="Prestiti">
            <view:PrestitoPage/>
        </TabItem>
    </TabControl>
</Window>
