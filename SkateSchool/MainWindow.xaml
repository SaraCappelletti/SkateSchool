<Window x:Class="SkateSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:SkateSchool.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Iscrizione corsi">
            <view:IscrizioneCorsiPage/>
        </TabItem>
        <TabItem Header="Gare e Centri Estivi">
            <view:IscrizioneGaraCentroEstivo/>
        </TabItem>
        <TabItem Header="Lezione Privata">
            <view:IscrizioneLezionePrivataPage Margin="10,0,-10,0"/> 
        </TabItem>
        <TabItem Header="Negozio">
            <view:Negozio/>
        </TabItem>
        <TabItem Header="Prestiti">
            <view:Prestiti/>
        </TabItem>
        <TabItem Header="Pagamento">
            <view:PagamentoPage/>
        </TabItem>
    </TabControl>
</Window>
